{{#each validationErrors as |error|}}
  <div class="alert alert-danger" role="alert">
    {{error}}
  </div>
{{/each}}

<h3>
  Edit Joke
</h3>
<div class="form">
  <form {{action 'editJoke' model on='submit'}}>

    <div class="form-input">
      <div>Setup:</div>
      {{textarea class="form-control" value=model.setup}}
    </div>

    <div class="form-input">
      <div>Punchline:</div>
      {{textarea class="form-control" value=model.punchline}}
    </div>

    <div>
      <input type="Submit" class="button">
    </div>

  </form>
</div>
<br>
{{link-to "Back to joke" 'jokes.show' joke}}
